{{#if products}}

<br>
<p class="title">Nuestros Vinos - HANDLEBARS</p>

<BR>
<table class="table">
        <thead>
            <tr class="bg-success">
            <th>Nombre</th>
            <th>Precio</th>
            <th>Imagen</th>
            </tr>
        </thead>
{{#each products}}
        <tbody>
            <tr class="background_table">
               <td>{{this.title}}</td>
               <td> {{this.price}}</td>
               <td><img srcSet={{this.img}} sizes="(min-width: 10px)"/></td>                
            </tr>
        </tbody>
        {{/each}}
</table>

{{else}}
<h2 class="title">NO SE ENCONTRARON PRODUCTOS</h2>
{{/if}}
<br>
    <div class="center_button">
    <a href="/"><button>Volver a Inicio</button></a>
    </div>

